{
  "name": "ant-design-token-lens",
  "publisher": "lxKylin",
  "displayName": "Ant Design Token Lens",
  "description": "一款让 Ant Design CSS Token 在 VS Code 中「可见、可理解、可操作」的插件。",
  "version": "0.0.3",
  "license": "MIT",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "./images/preview.png",
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "antdToken.copyTokenValue",
          "when": "false"
        }
      ]
    },
    "commands": [
      {
        "command": "antdToken.refreshDecorations",
        "title": "Refresh Token Decorations",
        "category": "Ant Design Token"
      },
      {
        "command": "antdToken.toggleDecorator",
        "title": "Toggle Color Decorator",
        "category": "Ant Design Token"
      },
      {
        "command": "antdToken.copyTokenValue",
        "title": "复制 Token 值",
        "category": "Ant Design Token"
      },
      {
        "command": "antdToken.findReferences",
        "title": "查找 Token 引用",
        "category": "Ant Design Token"
      },
      {
        "command": "antdToken.toggleThemePreview",
        "title": "切换主题预览",
        "category": "Ant Design Token"
      },
      {
        "command": "antdToken.refreshTokens",
        "title": "刷新 Token 数据",
        "category": "Ant Design Token"
      },
      {
        "command": "antdToken.clearRecentTokens",
        "title": "清空最近使用的 Token",
        "category": "Ant Design Token"
      },
      {
        "command": "antdToken.reloadSources",
        "title": "重新加载 Token 数据源",
        "category": "Ant Design Token"
      },
      {
        "command": "antdToken.showSources",
        "title": "查看 Token 数据源",
        "category": "Ant Design Token"
      },
      {
        "command": "antdToken.rescanTokenFiles",
        "title": "重新扫描 Token 文件",
        "category": "Ant Design Token"
      }
    ],
    "keybindings": [
      {
        "command": "antdToken.toggleThemePreview",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus"
      },
      {
        "command": "antdToken.refreshTokens",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      }
    ],
    "configuration": {
      "title": "Ant Design Token",
      "properties": {
        "antdToken.themeMode": {
          "type": "string",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "default": "light",
          "description": "主题模式：auto (跟随 VS Code)、light、dark"
        },
        "antdToken.colorDecorator.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用颜色装饰器"
        },
        "antdToken.colorDecorator.style": {
          "type": "string",
          "enum": [
            "square",
            "circle",
            "underline",
            "background"
          ],
          "default": "background",
          "enumDescriptions": [
            "方形色块",
            "圆形色块",
            "下划线",
            "背景高亮（默认）"
          ],
          "description": "颜色装饰样式"
        },
        "antdToken.colorDecorator.position": {
          "type": "string",
          "enum": [
            "before",
            "after"
          ],
          "default": "before",
          "description": "颜色块显示位置"
        },
        "antdToken.colorDecorator.size": {
          "type": "string",
          "enum": [
            "small",
            "medium",
            "large"
          ],
          "default": "medium",
          "description": "颜色块大小"
        },
        "antdToken.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "启用鼠标悬停提示功能"
        },
        "antdToken.showMultiTheme": {
          "type": "boolean",
          "default": true,
          "description": "在 Hover 中显示多主题对比"
        },
        "antdToken.showColorFormats": {
          "type": "boolean",
          "default": true,
          "description": "在 Hover 中显示多种颜色格式"
        },
        "antdToken.hoverVerbosity": {
          "type": "string",
          "enum": [
            "minimal",
            "normal",
            "detailed"
          ],
          "default": "normal",
          "enumDescriptions": [
            "仅显示基本信息",
            "显示常规信息",
            "显示详细信息"
          ],
          "description": "Hover 信息详细程度"
        },
        "antdToken.enableCompletion": {
          "type": "boolean",
          "default": true,
          "description": "启用 Token 自动补全"
        },
        "antdToken.completionDetailLevel": {
          "type": "string",
          "enum": [
            "minimal",
            "normal",
            "detailed"
          ],
          "default": "normal",
          "enumDescriptions": [
            "仅显示基本信息",
            "显示常规信息",
            "显示详细信息"
          ],
          "description": "补全项详细程度"
        },
        "antdToken.showRecentTokensFirst": {
          "type": "boolean",
          "default": true,
          "description": "最近使用的 Token 优先显示"
        },
        "antdToken.maxRecentTokens": {
          "type": "number",
          "default": 10,
          "minimum": 5,
          "maximum": 50,
          "description": "记录的最近使用 Token 数量"
        },
        "antdToken.enablePinyinSearch": {
          "type": "boolean",
          "default": true,
          "description": "启用拼音首字母搜索"
        },
        "antdToken.enableCategoryGroups": {
          "type": "boolean",
          "default": false,
          "description": "按分类分组显示补全项"
        },
        "antdToken.showCompletionIcons": {
          "type": "boolean",
          "default": true,
          "description": "在补全项前显示颜色图标"
        },
        "antdToken.sources": {
          "type": "array",
          "default": [],
          "description": "自定义 Token 数据源配置",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "css",
                  "less",
                  "scss"
                ],
                "description": "数据源类型"
              },
              "filePath": {
                "type": "string",
                "description": "文件路径（相对于工作区根目录）"
              },
              "enabled": {
                "type": "boolean",
                "default": true,
                "description": "是否启用此数据源"
              },
              "priority": {
                "type": "number",
                "description": "优先级（数字越小越优先）"
              },
              "watch": {
                "type": "boolean",
                "default": true,
                "description": "是否监听文件变更"
              }
            },
            "required": [
              "type",
              "filePath"
            ]
          },
          "examples": [
            [
              {
                "type": "css",
                "filePath": "./src/styles/tokens.css",
                "priority": 10
              }
            ]
          ]
        },
        "antdToken.enableAutoScan": {
          "type": "boolean",
          "default": true,
          "description": "是否自动扫描项目中的 Token 文件"
        },
        "antdToken.autoScanPatterns": {
          "type": "array",
          "default": [
            "**/tokens.{css,less,scss}",
            "**/*.theme.{css,less,scss}"
          ],
          "description": "自动扫描的文件匹配模式",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "node esbuild.js --production",
    "vsix": "pnpm run package && vsce package --no-dependencies --allow-missing-repository --skip-license",
    "compile-tests": "tsc -p . -outDir out",
    "watch-tests": "tsc -p . -outDir out -w",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "bugs": {
    "url": "https://github.com/lxKylin/vscode-ext-antd-token-lens/issues"
  },
  "homepage": "https://github.com/lxKylin/vscode-ext-antd-token-lens",
  "repository": {
    "type": "git",
    "url": "https://github.com/lxKylin/vscode-ext-antd-token-lens.git"
  },
  "devDependencies": {
    "@types/color": "^4.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/pinyin": "^2.10.2",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "color": "^5.0.3",
    "pinyin": "^4.0.0"
  }
}
