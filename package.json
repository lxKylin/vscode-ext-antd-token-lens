{
  "name": "antd-css-tokens-highlight",
  "displayName": "antd-css-tokens-highlight",
  "description": "令antd css toke 在编辑器中可以显示色值,以及提示 css token",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "antd-css-tokens.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "antdToken.refreshDecorations",
        "title": "Refresh Token Decorations",
        "category": "Ant Design Token"
      },
      {
        "command": "antdToken.toggleDecorator",
        "title": "Toggle Color Decorator",
        "category": "Ant Design Token"
      }
    ],
    "configuration": {
      "title": "Ant Design Token",
      "properties": {
        "antdToken.themeMode": {
          "type": "string",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "default": "light",
          "description": "主题模式：auto (跟随 VS Code)、light、dark"
        },
        "antdToken.colorDecorator.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用颜色装饰器"
        },
        "antdToken.colorDecorator.style": {
          "type": "string",
          "enum": [
            "square",
            "circle",
            "underline",
            "background"
          ],
          "default": "background",
          "enumDescriptions": [
            "方形色块",
            "圆形色块",
            "下划线",
            "背景高亮（默认）"
          ],
          "description": "颜色装饰样式"
        },
        "antdToken.colorDecorator.position": {
          "type": "string",
          "enum": [
            "before",
            "after"
          ],
          "default": "before",
          "description": "颜色块显示位置"
        },
        "antdToken.colorDecorator.size": {
          "type": "string",
          "enum": [
            "small",
            "medium",
            "large"
          ],
          "default": "medium",
          "description": "颜色块大小"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./ && pnpm run copy-assets",
    "copy-assets": "mkdir -p out/assets/css && cp src/assets/css/*.css out/assets/css/",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
